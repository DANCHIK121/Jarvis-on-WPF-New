<Window x:Class="Jarvis_on_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Jarvis_on_WPF"
        mc:Ignorable="d"
        Title="Jarvis" MinHeight="450" MinWidth="750" Height="450" Width="780">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="155" />
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="150" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition Height="33" />
            <RowDefinition Height="33" />
            <RowDefinition Height="300" />
            <RowDefinition Height="33" />
            <RowDefinition Height="33" />
        </Grid.RowDefinitions>

        <!-- Top menu -->
        <Menu Height="25" Grid.Row="0" Grid.ColumnSpan="10">
            <MenuItem Header="Приложение" FontSize="20px" FontFamily="Times New Roman" >
                <MenuItem x:Name="Exit_Program" x:FieldModifier="public" Header="Выход" Click="Exit_Program_Click" FontSize="15px" FontFamily="Times new Roman" />
                <MenuItem x:Name="Close_Window" x:FieldModifier="public" Header="Закрыть окно" Click="Close_Window_Click" FontSize="15px" FontFamily="Times new Roman" />
            </MenuItem>
        </Menu>

        <!-- Greeting label -->
        <TextBlock x:Name="GreetingLabel" Text="Jarvis" Grid.Column="2" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,30,0" FontFamily="Times New Roman" FontSize="30" FontWeight="Bold" />

        <!-- Recognized label -->
        <TextBlock x:Name="RecognizedLabel" Text="Recognized" Grid.Column="0" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,-223,0" FontFamily="Times New Roman" FontSize="30" FontWeight="Bold" />

        <!-- Recognized text -->
        <Border BorderBrush="Black" BorderThickness="2" CornerRadius="2" Padding="1" Background="#FFF5F5F5" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="4" Margin="5,0,0,0" Width="600">
            <TextBox x:Name="RecognizedText" Text="" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="4" FontSize="25px" FontFamily="Times New Roman" VerticalAlignment="Top" HorizontalAlignment="Left" Width="585" Height="285" Margin="5,5,5,5" ScrollViewer.VerticalScrollBarVisibility="Visible" ScrollViewer.HorizontalScrollBarVisibility="Visible" />
        </Border>

        <!-- Service buttons -->
        <Button Content="Скрыть в трей" Click="Hide_Window_Click" Width="130" Height="30" Grid.Column="4" Grid.Row="3" VerticalAlignment="Top" FontSize="18" FontFamily="Times New Roman" />
        <Button Content="Очистить поле" Click="Clear_Recognized_TextBlock_Click" Width="130" Height="30" Grid.Column="4" Grid.Row="3" VerticalAlignment="Top" FontSize="18" FontFamily="Times New Roman" Margin="0,50,0,0" />
    </Grid>
</Window>
